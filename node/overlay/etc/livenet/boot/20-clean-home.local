#!/bin/bash

# cancelliamo le homes temporanee /home/* eccetto /home/ssm
for f in `ls /home/tmp/*/.temporary 2>/dev/null`; do
   if [ -f $f ]; then
      chattr -i $f
   fi
done

find /home/tmp/ -maxdepth 1 -type d -a ! -name "tmp" ! -name "livenet" ! -name "ssm" -exec rm -fR {} \;

